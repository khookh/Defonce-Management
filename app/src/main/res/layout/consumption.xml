<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/constraintLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="Controller.Fragment.Consumption">

    <TextView
            android:id="@+id/cons_label"
            android:gravity="center"
            android:layout_width="349dp"
            android:layout_height="60dp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.008"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="346dp"
            android:layout_height="40dp"
            android:id="@+id/progressBar"
            app:layout_constraintTop_toBottomOf="@+id/cons_label" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            android:progress="25"/>
    <TextView
            android:gravity="center"
            android:text="bar"
            android:layout_width="247dp"
            android:layout_height="35dp"
            android:id="@+id/barcomment"
            app:layout_constraintTop_toBottomOf="@+id/progressBar" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
            android:layout_width="363dp"
            android:layout_height="155dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/barcomment"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintVertical_bias="0.154" android:id="@+id/scrollView2">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <Button
                    android:text="Test Alcool 1"
                    android:onClick="selectedAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/alcool1"/>
            <Button
                    android:text="Test Alcool 2"
                    android:onClick="selectedAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/alcool2"/>
            <Button
                    android:text="Test Alcool 3"
                    android:onClick="selectedAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/alcool3"/>
            <Button
                    android:text="Test Alcool 4"
                    android:onClick="selectedAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/alcool4"/>
            <Button
                    android:text="Test Alcool 5"
                    android:onClick="selectedAlcool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/alcool5"/>


        </LinearLayout>
    </ScrollView>
    <TextView
            android:text="Add an alcool from the list below"
            android:gravity="center"
            android:layout_width="256dp"
            android:layout_height="26dp"
            android:id="@+id/textView14"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="76dp"/>
    <Button
            android:text="Add Consumption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintBottom_toBottomOf="parent" tools:ignore="MissingConstraints"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
            android:layout_width="203dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:hint="volume in cL"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintBottom_toTopOf="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Or add a consumption manually"
            android:gravity="center"
            android:layout_width="222dp"
            android:layout_height="32dp"
            android:id="@+id/textView15" tools:ignore="MissingConstraints"
            app:layout_constraintBottom_toTopOf="@+id/editText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp"/>
    <EditText
            android:layout_width="203dp"
            android:layout_height="41dp"
            android:inputType="textPersonName"
            android:hint="alcoolic %"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintTop_toTopOf="@+id/cons_label" app:layout_constraintVertical_bias="0.847"
            android:layout_marginStart="104dp"/>
    <EditText
            android:layout_width="203dp"
            android:layout_height="39dp"
            android:inputType="textPersonName"
            android:hint="beer name"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintBottom_toTopOf="@+id/editText2" android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.997"/>
    <Switch
            android:text="I'm drinking while eating"
            android:layout_width="159dp"
            android:layout_height="55dp"
            android:id="@+id/switch1"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"/>

</androidx.constraintlayout.widget.ConstraintLayout>