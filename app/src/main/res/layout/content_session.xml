<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="Controller.Session_Control"
        tools:showIn="@layout/session">
    <TextView
            android:text="Session"
            android:layout_width="317dp"
            android:gravity="center"
            android:layout_height="45dp"
            android:id="@+id/startup" tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.086"/>
    <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp" app:layout_constraintTop_toTopOf="@+id/startup"
            android:layout_marginTop="48dp" android:id="@+id/tabLayout">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Beverage" tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_editor_absoluteY="107dp" tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="0dp"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overview" tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_editor_absoluteY="107dp" tools:layout_editor_absoluteX="137dp"
                tools:layout_conversion_absoluteWidth="0dp"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statistics" tools:layout_conversion_absoluteHeight="0dp"
                tools:layout_editor_absoluteY="107dp" tools:layout_editor_absoluteX="274dp"
                tools:layout_conversion_absoluteWidth="0dp"/>
    </com.google.android.material.tabs.TabLayout>
</androidx.constraintlayout.widget.ConstraintLayout>